#!/bin/sh
suffix() {
  case $1 in
    1|21|31) echo "st";;
    2|22)    echo "nd";;
    3|23)    echo "rd";;
    *)       echo "th";;
  esac
}
ICON="î€•"
DATE_PARTS=$(date "+%e %b %l:%M%P")
DAY="$(echo $DATE_PARTS | cut -d' ' -f1)"
SUFFIX=$(suffix $DAY)
MONTH="$(echo $DATE_PARTS | cut -d' ' -f2)"
TIME="$(echo $DATE_PARTS | cut -d' ' -f3)"
echo "%{F$NGRN}$ICON $MONTH $DAY$SUFFIX, $TIME"
